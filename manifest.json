{
  "name": "GitHub Beautifier",
  "version": "0.9",
  "description": "Beautify the New GitHub UI",
  "manifest_version": 2,
  "icons": {
    "16": "icon/inactive32.png",
    "32": "icon/inactive32.png",
    "48": "icon/inactive64.png",
    "128": "icon/inactive128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "event_rules": [{
    "event": "declarativeContent.onPageChanged",
    "actions": [{
      "type": "declarativeContent.SetIcon",
      "path": {
          "16": "icon/active32.png",
          "32": "icon/active32.png",
          "48": "icon/active64.png",
          "128": "icon/active128.png"
      }
    }],
    "conditions": [{
      "type": "declarativeContent.PageStateMatcher",
      "pageURL": { "hostSuffix": "github.com" }
    }]
  }],
  "permissions": ["declarativeContent", "activeTab", "tabs", "*://*.github.com/*"],
  "page_action": {
    "default_icon": "icon/inactive32.png",
    "default_title": "GitHub Beautifier",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "css": [
        "classic.css"
      ]
    }
  ]
}