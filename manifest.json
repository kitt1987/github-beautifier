{
  "name": "GitHub Beautifier",
  "version": "0.9",
  "description": "Beautify the New GitHub UI",
  "manifest_version": 2,
  "icons": {
    "16": "icon/32.png",
    "32": "icon/32.png",
    "48": "icon/64.png",
    "128": "icon/128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "decorator/avatar.js",
      "decorator/nav/centralizenav.js",
      "decorator/radius.js",
      "config.js",
      "background.js"
    ]
  },
  "permissions": ["declarativeContent", "storage", "tabs", "*://*.github.com/*"],
  "page_action": {
    "default_icon": "icon/32.png",
    "default_title": "GitHub Beautifier",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "css": [
        "decorator/nav/content.css"
      ]
    }
  ]
}